{
  "name": "libui-napi",
  "version": "0.1.16",
  "description": "Experimental bindings for libui using n-api",
  "dependencies": {
    "home-path": "^1.0.5",
    "is-ci": "^1.1.0",
    "mkdirp": "^0.5.1",
    "mv": "^2.1.1",
    "node-gyp": "^3.6.2",
    "tar": "^4.4.1"
  },
  "libui": "alpha3.5-master-002",
  "devDependencies": {
    "debug": "^3.1.0",
    "jsdoc-to-markdown": "^4.0.1",
    "rimraf": "^2.6.2",
    "tape": "^4.9.0"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "tools",
    "index.js",
    "src",
    "binding.gyp"
  ],
  "scripts": {
    "docs": "sh tools/docs.sh",
    "start": "node --expose-gc example.js",
    "download-libui": "node tools/libui-download.js",
    "download-libui-napi": "node tools/libui-napi-download.js",
    "clean": "rimraf build *.h *.node libui.* node_modules",
    "build": "node-gyp configure build",
    "install": "npm run download-libui && npm run download-libui-napi || npm run build",
    "test": "tape test.js"
  },
  "repository": "parro-it/libui-napi",
  "author": "Andrea Parodi (andrea@parro.it)",
  "license": "MIT"
}
