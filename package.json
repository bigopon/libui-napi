{
  "name": "libui-napi",
  "author": "Andrea Parodi (andrea@parro.it)",
  "version": "0.1.22",
  "description": "Experimental bindings for libui using n-api",
  "repository": "parro-it/libui-napi",
  "license": "MIT",
  "keywords": [
    "libui",
    "desktop",
    "multiplatform",
    "GUI"
  ],
  "engines": {
    "node": ">=6.14.2"
  },
  "libui": "alpha3.5-master-003",
  "scripts": {
    "docs": "node tools/docs.js",
    "start": "node --expose-gc example.js",
    "download-libui": "node tools/libui-download.js",
    "download-libui-napi": "node tools/libui-napi-download.js",
    "clean": "rimraf build *.h *.node libui.* node_modules",
    "rebuild": "rimraf build *.node && node-gyp configure build",
    "build": "node-gyp configure build",
    "install": "npm run --silent download-libui && npm run --silent download-libui-napi || npm run build",
    "test": "cross-env LIBUI_TARGET=test node-gyp configure build && cross-env LIBUI_TARGET=test DEBUG=ControlInternal tape tests/*.js",
    "precommit": "check-clang-format \"'npm run lint'\"",
    "lint": "clang-format -i --glob='{tests/**/*.{h,c,m,js},example/*.js,js/**/*.js,src/**/*.{h,c,m},index.js,example.js,test.js,example/gallery/src/**/*.js,tools/**/*.js}'"
  },
  "dependencies": {
    "@creditkarma/async-hooks": "0.0.4",
    "home-path": "^1.0.5",
    "is-ci": "^1.1.0",
    "mkdirp": "^0.5.1",
    "mv": "^2.1.1",
    "node-gyp": "^3.6.2",
    "tar": "^4.4.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "boxen": "^1.3.0",
    "clang-format": "^1.2.3",
    "cross-env": "^5.1.4",
    "debug": "^3.1.0",
    "husky": "^0.14.3",
    "jsdoc-to-markdown": "^4.0.1",
    "p-map": "^1.2.0",
    "rimraf": "^2.6.2",
    "tape": "^4.9.0",
    "tape-async": "^2.3.0",
    "to-dot-case": "^1.0.0"
  },
  "files": [
    "tools",
    "index.js",
    "src",
    "binding.gyp"
  ]
}
